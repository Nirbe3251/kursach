<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <section class="vh-90 gradient-custom">
    <div class="container py-5 h-90">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
          <div class="card bg-dark text-white" style="border-radius: 1rem;">
            <div class="card-body p-5 text-center">
              <div class="mb-md-5 mt-md-4 pb-5">
                <h2 class="fw-bold mb-4 text-uppercase">Войти</h2>
                <div class="form-outline form-white mb-4">
                  <%= f.label :email, "Почта", class: 'form-label' %>
                  <%= f.email_field :email,autofocus: true, autocomplete: "email", class: 'form-control form-control-lg' %>
                </div>
                <div class="form-outline form-white mb-4">
                  <%= f.label :password, "Пароль",class: 'form-label' %>
                  <%= f.password_field :password, autocomplete: "current-password", class: 'form-control form-control-lg' %>
                </div>
                <% if devise_mapping.rememberable? %>
                  <div class="form-outline form-white mb-4">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me, "Запомнить меня" %>
                  </div>
                <% end %>
                <p class="small mb-5 pb-lg-2">
                  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                    <%= link_to "Забыли пароль?", new_password_path(resource_name), class: 'text-white-50' %>
                  <% end %>
                </p>
                <div class="actions">
                  <%= f.submit "Войти", class: 'btn btn-outline-light btn-lg px-5', method: :get %>
                </div>
              </div>
              <div>
                <p class="mb-0">Нет аккаунта?
                  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                    <%= link_to "Зарегистрироваться", new_registration_path(resource_name), class: 'text-white-50 fw-bold' %>
                  <% end %>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
<% end %>
