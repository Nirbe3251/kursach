<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <section class="vh-90 gradient-custom">
    <div class="container py-5 h-90">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
          <div class="card bg-dark text-white" style="border-radius: 1rem;">
            <div class="card-body p-5 text-center">
              <div class="mb-md-3 mt-md-4 pb-5">
                <h3 class="fw-bold mb-4 text-uppercase">Регистрация</h3>

                <div class="form-outline form-white mb-4">
                  <%= f.label :email, "Почта",class: 'form-label' %>
                  <%= f.email_field :email, autofocus: true, class: 'form-control form-control-lg' %>
                  <%= render "devise/shared/error_messages", resource: resource, type: 'email' %>
                </div>

                <div class="form-outline form-white mb-4">
                  <%= f.label :nickname, "Никнейм", class: 'form-label' %>
                  <%= f.text_field :nickname, class: 'form-control form-control-lg' %>
                </div>

                <div class="form-outline form-white mb-4">
                  <%= f.label :birthday, "Дата рождения", class: 'form-label' %>
                  <%= f.date_field :birthday, autofocus: true, class: 'form-control form-control-lg' %>
                </div>

                <div class="form-outline form-white mb-4">
                  <%= f.label :password, "Пароль", class: 'form-label' %>
                  <%= f.password_field :password, autocomplete: "new-password", class: 'form-control form-control-lg', placeholder: "#{@minimum_password_length} символов минимум" if @minimum_password_length %>
                  <%= render "devise/shared/error_messages", resource: resource, type: 'password' %>
                </div>

                <div class="form-outline form-white mb-5">
                  <%= f.label :password_confirmation, "Подтверждение пароля", class: 'form-label' %>
                  <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control form-control-lg' %>
                  <%= render "devise/shared/error_messages", resource: resource, type: 'conf-passwd' %>
                </div>

                <div class="actions">
                  <%= f.submit "Зарегистрироваться", class: 'btn btn-outline-light btn-lg px-5' %>
                </div>
              </div>
              <div>
                <p class="mb-0">
                <%- if controller_name != 'sessions' %>
                  <%= link_to "Войти", new_session_path(resource_name), class: 'text-white-50 fw-bold' %><br />
                <% end %>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
<% end %>