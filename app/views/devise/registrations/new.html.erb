<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <section class="vh-90 gradient-custom">
    <div class="container py-5 h-90">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
          <div class="card bg-dark text-white" style="border-radius: 1rem;">
            <div class="card-body p-5 text-center">
              <div class="mb-md-5 mt-md-4 pb-5">
                <h2 class="fw-bold mb-2 text-uppercase">Sign up</h2>
                <div class="form-outline form-white mb-4">
                  <%= f.email_field :email, "Почта",autofocus: true, autocomplete: "email", class: 'form-control form-control-lg' %>
                  <%= f.label :email, class: 'form-label' %>
                </div>
                <div class="form-outline form-white mb-4">
                  <%= f.text_field :nickname, "Никнейм",autofocus: true, class: 'form-control form-control-lg' %>
                  <%= f.label :nickname, class: 'form-label' %>
                </div>
                <div class="form-outline form-white mb-4">
                  <%= f.date_field :birthday, "Дата рождения",autofocus: true, class: 'form-control form-control-lg' %>
                  <%= f.label :birthday, class: 'form-label' %>
                </div>

                <div class="form-outline form-white mb-4">
                  <%= f.password_field :password, "Пароль",autocomplete: "new-password", class: 'form-control form-control-lg' %>
                  <%= f.label :password, class: 'form-label' %>
                  <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                  <% end %><br />
                </div>

                <div class="field">
                  <%= f.password_field :password_confirmation, "Подтверждение пароля",autocomplete: "new-password", class: 'form-control form-control-lg' %>
                  <%= f.label :password_confirmation, class: 'form-label' %>
                </div>

                <div class="actions">
                  <%= f.submit "Зарегистрироваться", class: 'btn btn-outline-light btn-lg px-5' %>
                </div>
              </div>
              <div>
                <p class="mb-0">
                <%- if controller_name != 'sessions' %>
                  <%= link_to "Войти", new_session_path(resource_name), class: 'text-white-50 fw-bold' %><br />
                <% end %>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
<% end %>