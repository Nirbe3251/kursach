<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <section class="vh-90 gradient-custom">
    <div class="container py-5 h-90">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
          <div class="card bg-dark text-white" style="border-radius: 1rem;">
            <div class="card-body p-5 text-center">
              <div class="mb-md-5 mt-md-4 pb-5">
                <h6 class="mb-2 text-uppercase">Изменить пароль</h6>
                <div class="form-outline form-white mb-4">
                  <%= f.label :password, "Новый пароль", class: 'form-label' %><br />
                  <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control form-control-lg' %>
                  <%= f.hidden_field :reset_password_token %>
                  <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> символов минимум)</em><br />
                  <% end %>
                </div>
                <div class="form-outline form-white mb-4">
                  <%= f.label :password_confirmation, "Подвердить новый пароль", class: 'form-label' %><br />
                  <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control form-control-lg' %>
                </div>
                <div class="actions">
                  <%= f.submit "Изменить пароль", class: 'btn btn-outline-light btn-lg px-5' %>
                </div>
              </div>
              <div>
                <p class="mb-0">
                <%- if controller_name != 'sessions' %>
                  <%= link_to "Войти", new_session_path(resource_name), class: 'text-white-50 fw-bold' %><br />
                <% end %>
                </p>
                <p class="mb-0">
                  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                    <%= link_to "Зарегистрироваться", new_registration_path(resource_name), class: 'text-white-50 fw-bold' %>
                  <% end %>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
<% end %>
