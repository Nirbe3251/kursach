<!-- create room -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Создание комнаты</h5>
      </div>
      <%= form_for rooms, class: 'row' do |form| %>
        <div class="modal-body">
          <div class="form-group row pb-1">
            <div class='input-group col-12'>
              <%= form.label 'Название', class: 'col-sm-2 col-form-label' %>
              <div class="col-sm-10">
                <%= form.text_field :name, class: 'form-control' %>
              </div>
            </div>
          </div>
          <div class="form-group row">
            <div class='input-group col-12'>
              <%= form.label 'Пароль', class: 'col-sm-2 col-form-label' %>
              <div class="col-sm-10">
                <%= form.text_field :password, class: 'form-control' %>
              </div>
            </div> 
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
          <%= form.submit 'Создать', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>