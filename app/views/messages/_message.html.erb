<div class="d-flex justify-content-between">
  <p class="small mb-1"><%= link_to message.user.nickname, user_path(message.user.id) %></p>
  <p class="small mb-1 text-muted"><%= message.created_at.strftime("%H:%M") %></p>
</div>
<div class="d-flex flex-row justify-content-start">
  <% if message.user.avatar.present? %>
    <%= image_tag url_for(message.user.avatar), class: 'avatar', style: 'width: 45px; height: 100%;', alt: 'avatar' %>
  <% end %>
  <div>
    <p class="small p-2 ms-3 mb-3 rounded-3" style="background-color: #f5f6f7;"><%= message.body %></p>
  </div>
</div>